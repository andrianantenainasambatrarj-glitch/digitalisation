<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Justificatif" table="justificatif">
    <indexes>
      <index name="id_demande" columns="id_demande"/>
      <index name="id_type_justif" columns="id_type_justif"/>
    </indexes>
    <id name="idJustif" type="integer" column="id_justif">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="idDemande" type="integer" column="id_demande" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="idTypeJustif" type="integer" column="id_type_justif" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="cheminFichier" type="string" column="chemin_fichier" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nomOriginal" type="string" column="nom_original" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="dateAjout" type="datetime" column="date_ajout" nullable="true">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <field name="valide" type="string" column="valide" length="0" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">en_attente</option>
      </options>
    </field>
    <field name="commentaire" type="string" column="commentaire" length="150" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
